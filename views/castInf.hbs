                </blockquote>      
                 </blockquote>
        <blockquote class=" bg-dark blockquote mb-0">
        gender:  {{cast.gender}}
                </blockquote>  
                 <blockquote class=" bg-dark blockquote mb-0">
       height:  {{cast.heightcentimeters}}
                </blockquote>  
                 <blockquote class=" bg-dark blockquote mb-0">
