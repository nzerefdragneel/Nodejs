<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/CSS/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <script defer src="script.js"> -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    
</head>
<body>
    
    <div class="container bg-dark">
        <div class="row">
            <div class="col-md-12 bg-dark">
                <nav class="navbar bg-dark">
        <div class="container-fluid bg-dark">
        <a  class="narbar-brand fw-bold" href="/">Home</a>
        <form role="search" class="d-flex"  method="get" action="/search/">
        <input type="search" class="form-control" v-model="strSearch" placeholder="id" name="moviename" aria-label="Search">   
        <button class="btn btn-outline-success" type="submit" >Search</button>
       </form>
        <form role="search" class="d-flex"  method="get" action="/searchcast/">
             <input type="search" class="form-control" v-model="strSearch" placeholder="cast" name="cast" aria-label="Search">   
            <button class="btn btn-outline-success" type="submit" >Search</button>
       </form>
        <form  action="/login">        
        <button class="btn btn-outline-success" type="submit" >SIGN IN</button>
        </form>
        </div>
    </nav>
            </div>
        </div>
        <div class="row-py-2">
        <div class="col-md-12">
            <div class="card">
    <h5 class="card-header text-info bg-dark">Content</h5>
    <div class="card-body">
        <div class="row row-cols-1 row-cols-md-3 g-4" id="movies">
    {{#each cast}}
   <a href="/cast/?idcast={{id}}" style="text-decoration:none">
    <div class="col">
        <div class="card h-100">
            <img src="{{image}}" class="card-img-top"alt="{{idmovie}}">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{gender}}</h5>
            </div>
            <div class="card-footer">
                <small class="text-muted">{{heightcentimeters}}</small>
            </div>
        </div>
    </div>
    </a>
    {{/each}}
 
</div>
    </div>
</div>
        </div>
    <nav aria-label="Page navigation example">
  <ul class="pagination bg-light">
   <li class="page-item"><a class="page-link" href="?cast={{id}}&page={{prev}}">prev</a></li>
    <li class="page-item"><a class="page-link" href="?cast={{id}}&page=1">1</a></li>
    <li class="page-item"><a class="page-link" href="?cast={{id}}&page=2">2</a></li>
    <li class="page-item"><a class="page-link" href="?cast={{id}}&page=3">3</a></li>
   <li class="page-item"><a class="page-link" href="?cast={{id}}&page={{next}}">next</a></li>
  
  </ul>
</nav>
        </div>
    </div>
</body>
 
</html> 