<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/CSS/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <script defer src="script.js"> -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
</head>
<body>
    
  
    <!-- Sign up form -->
<section class="bg-dark signup">
    <div class="bg-dark container">
        <div class="bg-dark signup-content">
            <div class="bg-dark signup-form">
                <h2 class="bg-dark form-title">Sign up</h2>
               <form action="/signup" method="post" >
                    <div class="bg-dark form-group">
                        <label for="name"><i class="bg-dark zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="username" id="name" placeholder="Your Name" />
                    </div>
                   
                    <div class="bg-dark form-group">
                        <label for="pass"><i class="bg-dark zmdi zmdi-lock"></i></label>
                        <input type="password" name="password" id="pass" placeholder="Password" />
                    </div>
                   
                    <div class="bg-dark form-group form-button">
                        <input type="submit" name="signup" id="signup" class="bg-dark form-submit" value="Register" />
                    </div>
                </form>
                 <div class="bg-light signup-image">
              
                <a href="/login" class="bg-light signup-image-link">I am already member</a>
            </div>
            </div>
           
        </div>
    </div>
</section>
</body>
</html> 